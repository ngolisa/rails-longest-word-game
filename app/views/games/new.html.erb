<div class="container">
  <h1>New Game</h1>
  <div class="grid">
    <ul>
    <% @letters.each do |letter| %>
      <li class="letter"><%= letter %></li>
    <% end %>
    </ul>
  </div>


  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="userword"> <h4>What is the longest word you can find? </h4></label>
    <br>
    <input type="hidden" name="letters" value='<%= @letters %>'>
    <input type="text" name="userword" placeholder="Type">
    <input type="submit" value="Play" class="btn-primary">
  </form>
</div>
